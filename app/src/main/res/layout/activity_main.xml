<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg3" />

    <TextView
        android:id="@+id/bmi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="175dp"
        android:text="BMI試算:"
        android:textColor="#292727"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_toInputInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="165dp"
        android:text="個人資訊輸入"
        android:textSize="20sp"
        app:backgroundTint="#77BAC3"
        app:layout_constraintStart_toEndOf="@+id/bmi_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="個人健康資訊:"
        android:textColor="#292727"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/bmi_title"
        app:layout_constraintTop_toBottomOf="@+id/bmi_title" />

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="姓名:"
        android:textColor="#292727"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/info_title"
        app:layout_constraintTop_toBottomOf="@+id/info_title" />

    <TextView
        android:id="@+id/info_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="性別:"
        android:textColor="#292727"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/info_name"
        app:layout_constraintTop_toBottomOf="@+id/info_name" />

    <TextView
        android:id="@+id/info_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="BMI值:"
        android:textColor="#292727"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/info_sex"
        app:layout_constraintTop_toBottomOf="@+id/info_sex" />

    <TextView
        android:id="@+id/info_healthCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="健康狀態:"
        android:textColor="#292727"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/info_bmi"
        app:layout_constraintTop_toBottomOf="@+id/info_bmi" />

    <Button
        android:id="@+id/btn_toBMIInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="32dp"
        android:text="BMI健康說明"
        android:textSize="20sp"
        app:backgroundTint="#77BAC3"
        app:layout_constraintStart_toStartOf="@+id/info_healthCon"
        app:layout_constraintTop_toBottomOf="@+id/info_healthCon" />

</androidx.constraintlayout.widget.ConstraintLayout>